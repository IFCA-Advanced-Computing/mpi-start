import sys
import os

if __name__ == '__main__':
    mpi_start_path = os.path.dirname(os.path.realpath(__file__))
    mpi_start_libs = os.path.realpath(os.path.join(mpi_start_path, '../lib/'))
    sys.path.insert(0, mpi_start_libs)

    try: 
        import common
        common.main()
    except ImportError, e:
        print >> sys.stderr, "Not able to load common mpi-start modules: %s" %  e
        sys.exit(1)
