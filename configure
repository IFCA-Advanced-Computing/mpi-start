#!/bin/sh

# Configure script for mpi-start.
# not very fancy stuff
name_prefix=""
VERSION=`cat VERSION`

PACKAGER=""

prefix=/usr/local
exec_prefix='${prefix}'
bindir='${exec_prefix}/bin'
datadir='${prefix}/share'
docdir='${datadir}/doc/${name_prefix}mpi-start'
sysconfdir='${prefix}/etc'
# modules are in $sysconfdir/mpi-start, should be moved to $datadir/mpi-start?
moduledir='${sysconfdir}/${name_prefix}mpi-start'
mandir='${datadir}/man'

vars='VERSION
name_prefix
prefix
exec_prefix
bindir
datadir
docdir
sysconfdir
moduledir
mandir
maintainerclean_files
PACKAGER
'

show_help () {
    echo "$0 [options]"
    echo "options:"
    echo "  --name_prefix=NAME_PREFIX"
    echo "  --prefix=PREFIX"
    echo "  --exec_prefix=PREFIX"
    echo "  --bindir=BINDIR"
    echo "  --docdir=DOCDIR"
    echo "  --datadir=DATADIR"
    echo "  --libdir=DATADIR"
    echo "  --sysconfdir=DATADIR"
    echo "  --mandir=DATADIR/man"
    echo "  --dist=''"
    echo "  --build=''"
    echo "  --packager=''"
    exit 0
}

# code taken from other configures...
prev=
dashdash=
for option ;
do
    if test -n "$prev"; then
        eval $prev=\$option
        prev=
        continue
    fi
    case $option in
        *=*) optarg=`expr "X$option" : '[^=]*=\(.*\)'` ;;
        *)   optarg=yes ;;
    esac
    case $option in
        -h | -help | --help)
            show_help ;;
        -name_prefix | --name_prefix)
            prev=name_prefix ;;
        -name_prefix=* | --name_prefix=*)
            name_prefix=$optarg ;;
        -prefix | --prefix)
            prev=prefix ;;
        -prefix=* | --prefix=*)
            prefix=$optarg ;;
        -exec_prefix | --exec_prefix)
            prev=exec_prefix ;;
        -exec_prefix=* | --exec_prefix=*)
            exec_prefix=$optarg ;;
        -bindir | --bindir)
            prev=bindir ;;
        -bindir=*| --bindir=*)
            bindir=$optarg ;;
        -datadir | --datadir)
            prev=datadir ;;
        -datadir=* | --datadir=*)
            datadir=$optarg ;;
        -libdir | --libdir)
            prev=libdir ;;
        -libdir=* | --libdir=*)
            libdir=$optarg ;;
        -docdir | --docdir)
            prev=docdir ;;
        -docdir=* | --docdir=*)
            docdir=$optarg ;;
        -sysconfdir | --sysconfdir)
            prev=sysconfdir ;;
        -sysconfdir=* | --sysconfdir=*)
            sysconfdir=$optarg ;;
        -mandir=* | --mandir=*)
            mandir=$optarg ;;
        -dist=* | --dist=*)
            dist=$optarg ;;
        -build=* | --build=*)
            build=$optarg ;;
        -packager=* | --packager=*)
            packager=$optarg ;;
    esac
done

if [ ! -z "$packager" ] ; then
    PACKAGER="--define \"packager $packager\""
fi


files='Makefile
src/Makefile
docs/Makefile
templates/Makefile
tests/Makefile
config/Makefile
modules/Makefile
modules/hooks/Makefile
modules/hooks/file-dist/Makefile
modules/mpi/Makefile
modules/mpi/dummy/Makefile
modules/mpi/generic/Makefile
modules/mpi/lam/Makefile
modules/mpi/mpich/Makefile
modules/mpi/mpich2/Makefile
modules/mpi/mvapich2/Makefile
modules/mpi/openmpi/Makefile
modules/mpi/pacx/Makefile
modules/schedulers/Makefile
modules/schedulers/condor/Makefile
modules/schedulers/lsf/Makefile
modules/schedulers/pbs/Makefile
modules/schedulers/sge/Makefile
modules/schedulers/slurm/Makefile'

maintainerclean_files="$files config/mpi-config.local"

for f in $files ; do
    cat > $f << EOF
##########################################################################
# WARNING
# DO NOT EDIT!
# File automatically generated from `basename $f`.in by configure script
##########################################################################
EOF
    for v in $vars;  do
        echo "$v=`eval echo \\$${v}`" >> $f
    done
    cat $f.in >> $f
done


################### DEFAULT CONFIG FILE FOR MPI ########################
if [ -z "$build" ] ; then
    # assume uname is correct as target distro 
    arch=`uname -m`
else
    echo "$build" | grep "x86_64" > /dev/null
    if [ $? -eq 0 ] ; then
        arch="x86_64"
    else
        # assume i386
        arch="i386"
    fi
fi

if [ -z "$dist" ] ; then
    if [ -z "target" ]; then
        # probably we are on debian, no arch
        dist=.debian
        arch=""
    else
        # dist is missing in some el5 (CentOS/SL)
        echo "$target" | grep "redhat" > /dev/null && dist=".el5"
    fi
fi

if [ -f config/mpi-config.local${dist}-${arch} ] ; then
    cp config/mpi-config.local.${dist}-${arch} config/mpi-config.local
fi
########################################################################


